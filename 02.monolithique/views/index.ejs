<%# ./views/index.ejs %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bureau des Super-Héros</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

<div class="logo-container">
    <img src="img/46ef697d-a564-4d0c-9790-9dcbdb015bc1-removebg-preview.png" alt="Logo" class="logo">
</div>

<h1>Bienvenue au bureau d'enregistrement des Héros !</h1>

<form action="/heroes" method="POST">
    <input type="text" name="heroName" placeholder="Nom du Héros" required>
    <input type="password" name="identity" id="identity" placeholder="Mot de passe"
           required>
    <button type="submit">Enregistrer</button>
</form>
<ul>
    <% heroes.forEach(hero => { %>
        <li><%= hero.heroName %> (<%= hero.identity%>)</li>
    <% }) %>
</ul>



</form>

<ul id="heroes-list"></ul>
</body>
</html>